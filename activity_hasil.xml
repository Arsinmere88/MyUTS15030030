<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HasilActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:text="Data Ujian"/>

    <TextView
        android:id="@+id/tampilnim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Nim"
        android:textSize="15dp"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/tampilnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Nama mhs"
        android:textSize="15dp"
        android:padding="6dp"/>

    <EditText
        android:id="@+id/editmatakuliah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Nama Matakuliah"/>

    <EditText
        android:id="@+id/editsks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SKS"/>

    <TextView
        android:id="@+id/tampilkelas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:text="kelas"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tanggal"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Pilih Tanggal Ujian"
        android:textColor="#FFFFFF"
        android:focusable="false"
        android:background="@color/colorPrimary"/>

    <EditText
        android:id="@+id/editsifatujian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:padding="6dp"
        android:hint="Sifat Ujian"/>
     <EditText
            android:id="@+id/editprogramstudi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="6dp"
            android:hint="Program Studi"/>
     <EditText
            android:id="@+id/editdosenpengampu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:padding="6dp"
            android:hint="Dosen Pengampu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:background="@color/colorPrimary"
            android:onClick="masuk"/>

        <Button
            android:id="@+id/btnreset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:background="@color/colorPrimary"
            android:layout_marginLeft="30dp" />
    </LinearLayout>

</LinearLayout>