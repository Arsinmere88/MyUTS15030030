<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    tools:context=".Tampil_Data">

    <!--TextView Head-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UJIAN TENGAH SEMESTER"
        android:gravity="center"
        android:textStyle="bold"/>

    <!--TextView Head-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="SEMESTER GENAP TA. 2020/2021"
        android:textStyle="bold"/>

    <!--TextView Head-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="INSTITUT TEKNOLOGI DIRGANTARA ADISUTJIPTO"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROGRAM STUDI"
            android:textStyle="bold"/>

        <!--TextView Program Studi-->
        <TextView
            android:id="@+id/dtprogramstudi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Mahasiswa                  :"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dtnama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Sesuaikan dengan data yang disisi"/>




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIM Mahasiswa                     :"
