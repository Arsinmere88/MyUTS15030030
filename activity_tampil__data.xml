        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matakuliah                              :"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dtmatakuliah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Sesuaikan dengan data yang disisi"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sks                                            :"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dtsks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Sesuaikan dengan data yang disisi"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dosen Pengampu                   :"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dtdosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Sesuaikan dengan data yang disisi"/>
    </LinearLayout>

